# ApexSalesAI Marketing Studio - Environment Variables
# Copy this file to .env.local and fill in the values

# Database (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/apex_marketing_studio"

# Azure AD / Entra ID (Authentication)
AZURE_AD_CLIENT_ID="your-azure-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
AZURE_AD_TENANT_ID="your-azure-tenant-id"

# NextAuth.js
NEXTAUTH_SECRET="generate-a-secure-random-string"
NEXTAUTH_URL="http://localhost:3000"

# Azure OpenAI (for AI-powered transforms)
AZURE_OPENAI_API_KEY="your-azure-openai-key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_DEPLOYMENT="gpt-4"
AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# OAuth - YouTube (Google)
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"

# OAuth - TikTok
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"

# OAuth - LinkedIn
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# OAuth - X (Twitter)
X_CLIENT_ID="your-x-client-id"
X_CLIENT_SECRET="your-x-client-secret"

# Feature Flags
FEATURE_MOCK_CONNECTORS="true"
FEATURE_AI_TRANSFORMS="true"
FEATURE_ADVANCED_WORKFLOWS="false"
FEATURE_CRM_INTEGRATION="false"

# Telemetry
TELEMETRY_ENABLED="true"

# Note: Never commit real secrets. Use environment-specific configurations.
